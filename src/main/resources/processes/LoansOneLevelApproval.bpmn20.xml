        <activiti:field name="to">
          <activiti:string><![CDATA[$(requestorEmail)]]></activiti:string>
        </activiti:field>
        <activiti:field name="from">
          <activiti:string><![CDATA[$(fromEmail)]]></activiti:string>
        </activiti:field>
        <activiti:field name="subject">
          <activiti:expression><![CDATA[Loans Portal:  ${processName} for Loan Contract ${loanContractId} : Approval request was rejected]]></activiti:expression>
        </activiti:field>
        <activiti:field name="html">
